<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.parking.mapper.ParkingFeeMapper">

    <select id="findByPage" resultType="com.parking.entity.ParkingFee">
        SELECT * FROM fee_park
        <where>
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
            <if test="payStatus != null and payStatus != ''">
                AND pay_park_status = #{payStatus}
            </if>
        </where>
        ORDER BY pay_park_month DESC
        LIMIT #{offset}, #{limit}
    </select>

    <select id="countByConditions" resultType="int">
        SELECT COUNT(*) FROM fee_park
        <where>
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
            <if test="payStatus != null and payStatus != ''">
                AND pay_park_status = #{payStatus}
            </if>
        </where>
    </select>

</mapper>
