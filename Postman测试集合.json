{
  "info": {
    "name": "停车管理系统API测试",
    "description": "完整的API测试集合，包含所有接口的测试用例",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080/api",
      "type": "string"
    },
    {
      "key": "adminToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "ownerToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. 认证接口",
      "item": [
        {
          "name": "1.1 管理员登录",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// 测试状态码",
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "// 测试响应结构",
                  "pm.test(\"Response has correct structure\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('code');",
                  "    pm.expect(jsonData).to.have.property('message');",
                  "    pm.expect(jsonData).to.have.property('data');",
                  "});",
                  "",
                  "// 保存Token",
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.token) {",
                  "        pm.collectionVariables.set(\"adminToken\", jsonData.data.token);",
                  "        console.log(\"Admin Token saved: \" + jsonData.data.token);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/admin/login?loginName=admin&password=admin123",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "admin", "login"],
              "query": [
                {"key": "loginName", "value": "admin"},
                {"key": "password", "value": "admin123"}
              ]
            }
          }
        },
        {
          "name": "1.2 业主登录",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "// 保存Token",
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.token) {",
                  "        pm.collectionVariables.set(\"ownerToken\", jsonData.data.token);",
                  "        console.log(\"Owner Token saved: \" + jsonData.data.token);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/owner/login?loginName=owner001&password=admin123",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "owner", "login"],
              "query": [
                {"key": "loginName", "value": "owner001"},
                {"key": "password", "value": "admin123"}
              ]
            }
          }
        }
      ]
    },
